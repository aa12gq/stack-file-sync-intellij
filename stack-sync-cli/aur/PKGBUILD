# Maintainer: Your Name <your.email@example.com>
pkgname=stack-sync-cli
pkgver=1.1.0
pkgrel=1
pkgdesc="Interactive file synchronization tool for development teams"
arch=('x86_64' 'aarch64')
url="https://github.com/stackfilesync/stack-sync-cli"
license=('MIT')
makedepends=('go')
source=("$pkgname-$pkgver.tar.gz::https://github.com/stackfilesync/stack-sync-cli/archive/v$pkgver.tar.gz")
sha256sums=('YOUR_SHA256_HERE')

build() {
    cd "$pkgname-$pkgver"
    make build
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 "build/stack-sync" "$pkgdir/usr/bin/stack-sync"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
